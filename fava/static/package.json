{
  "name": "fava",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "watch-js": "rollup -c -w",
    "watch-css": "postcss -lw -u 'postcss-import' -o 'gen/app.css' css/style.css",
    "lint": "eslint javascript --ext .js && stylelint 'css/*.css' --fix"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "browser": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "no-descending-specificity": null,
      "number-leading-zero": "never",
      "custom-property-empty-line-before": null,
      "order/properties-alphabetical-order": true
    }
  },
  "devDependencies": {
    "eslint": "^4.18.2",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "postcss": "^6.0.19",
    "postcss-cli": "^5.0.0",
    "postcss-import": "^11.1.0",
    "rollup": "^0.56.4",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^9.0.0",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.3",
    "rollup-plugin-postcss": "^1.3.3",
    "stylelint": "^9.1.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1"
  },
  "dependencies": {
    "@typopro/web-fira-mono": "^3.7.5",
    "@typopro/web-fira-sans": "^3.7.5",
    "@typopro/web-source-code-pro": "^3.7.5",
    "@typopro/web-source-serif-pro": "^3.7.5",
    "clipboard": "^1.7.1",
    "codemirror": "^5.35.0",
    "d3-array": "^1.2.1",
    "d3-axis": "^1.0.8",
    "d3-format": "^1.2.2",
    "d3-hierarchy": "^1.1.5",
    "d3-scale": "^2.0.0",
    "d3-scale-chromatic": "^1.2.0",
    "d3-selection": "^1.3.0",
    "d3-shape": "^1.2.0",
    "d3-time-format": "^2.1.1",
    "d3-transition": "^1.1.1",
    "d3-voronoi": "^1.1.2",
    "mousetrap": "^1.6.1",
    "url-search-params": "^0.10.0"
  }
}
