{
  "name": "fava",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "watch-js": "rollup -c -w",
    "watch-css": "postcss -lw -u 'postcss-import' -u 'postcss-custom-properties' -u 'postcss-nesting' -u 'postcss-color-function' -o 'gen/style.css' css/style.css",
    "lint": "eslint javascript --ext .js && stylelint 'css/*.css'"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "browser": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-order"
    ],
    "rules": {
      "no-descending-specificity": null,
      "number-leading-zero": "never",
      "custom-property-empty-line-before": null,
      "order/properties-alphabetical-order": true
    }
  },
  "devDependencies": {
    "eslint": "^4.15.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "postcss": "^6.0.16",
    "postcss-cli": "^4.1.1",
    "postcss-color-function": "^4.0.1",
    "postcss-copy": "^7.1.0",
    "postcss-custom-properties": "^6.2.0",
    "postcss-import": "^11.0.0",
    "postcss-nesting": "^4.2.1",
    "rollup": "^0.54.0",
    "rollup-plugin-buble": "^0.18.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.2",
    "rollup-plugin-postcss": "^1.2.1",
    "rollup-watch": "^4.3.1",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-order": "^0.8.0"
  },
  "dependencies": {
    "@typopro/web-fira-mono": "^3.7.5",
    "@typopro/web-fira-sans": "^3.7.5",
    "@typopro/web-source-code-pro": "^3.7.5",
    "@typopro/web-source-serif-pro": "^3.7.5",
    "classlist.js": "^1.1.20150312",
    "clipboard": "^1.7.1",
    "codemirror": "^5.33.0",
    "d3-array": "^1.2.1",
    "d3-axis": "^1.0.8",
    "d3-format": "^1.2.2",
    "d3-hierarchy": "^1.1.5",
    "d3-scale": "^1.0.7",
    "d3-scale-chromatic": "^1.1.1",
    "d3-selection": "^1.2.0",
    "d3-shape": "^1.2.0",
    "d3-time-format": "^2.1.1",
    "d3-transition": "^1.1.1",
    "d3-voronoi": "^1.1.2",
    "element-closest": "^2.0.2",
    "es6-promise": "^4.2.2",
    "mousetrap": "^1.6.1",
    "url-search-params": "^0.10.0",
    "whatwg-fetch": "^2.0.3"
  }
}
