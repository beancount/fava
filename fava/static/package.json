{
  "name": "fava",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -cw",
    "lint": "npm run format && eslint javascript --ext ,.svelte,.ts && stylelint 'css/*.css' --fix && npx tsc",
    "format": "cd ../../ && prettier '**/*.{css,md,svelte,ts}' --check --write --ignore-path .gitignore"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css}": [
      "stylelint --fix",
      "git add"
    ],
    "*.{css,md,svelte,ts}": [
      "prettier --write",
      "git add"
    ],
    "*.{svelte,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "proseWrap": "always",
    "trailingComma": "es5",
    "tabWidth": 2,
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "tabWidth": 2
        }
      }
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "svelte3"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "camelcase": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "max-classes-per-file": "off",
      "import/no-unresolved": "off",
      "import/prefer-default-export": 0,
      "prefer-destructuring": [
        "error",
        {
          "object": true,
          "array": false
        }
      ],
      "no-restricted-syntax": [
        "error",
        "ForInStatement",
        "LabelStatement",
        "WithStatement"
      ]
    },
    "overrides": [
      {
        "files": [
          "*.svelte"
        ],
        "processor": "svelte3/svelte3",
        "rules": {
          "import/first": "off",
          "import/no-mutable-exports": "off"
        }
      },
      {
        "files": [
          "*.ts"
        ],
        "rules": {
          "no-unused-vars": "off",
          "@typescript-eslint/no-unused-vars": "error"
        },
        "parser": "@typescript-eslint/parser"
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order",
      "stylelint-config-prettier"
    ]
  },
  "devDependencies": {
    "@types/codemirror": "0.0.76",
    "@types/d3-array": "^2.0.0",
    "@types/d3-axis": "^1.0.12",
    "@types/d3-color": "^1.2.2",
    "@types/d3-format": "^1.3.1",
    "@types/d3-hierarchy": "^1.1.6",
    "@types/d3-quadtree": "^1.0.7",
    "@types/d3-scale": "^2.1.1",
    "@types/d3-shape": "^1.3.1",
    "@types/d3-time-format": "^2.1.1",
    "@types/mousetrap": "^1.6.3",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.2.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.4",
    "prettier": "^1.18.2",
    "prettier-plugin-svelte": "^0.7.0",
    "rollup": "^1.20.2",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-css-only": "^1.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.0",
    "rollup-plugin-typescript": "^1.0.1",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.2.0",
    "stylelint-config-recess-order": "^2.0.3",
    "stylelint-config-standard": "^18.3.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "codemirror": "^5.48.4",
    "d3-array": "^2.3.1",
    "d3-axis": "^1.0.12",
    "d3-color": "^1.3.0",
    "d3-format": "^1.3.2",
    "d3-hierarchy": "^1.1.8",
    "d3-quadtree": "^1.0.6",
    "d3-scale": "^3.0.1",
    "d3-selection": "^1.3.2",
    "d3-shape": "^1.3.5",
    "d3-time-format": "^2.1.3",
    "d3-transition": "^1.2.0",
    "mousetrap": "^1.6.3",
    "svelte": "^3.9.1",
    "typeface-fira-mono": "0.0.72",
    "typeface-fira-sans": "0.0.75",
    "typeface-source-code-pro": "0.0.71",
    "typeface-source-serif-pro": "0.0.75"
  }
}
