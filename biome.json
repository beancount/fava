{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "files": {
    "includes": ["**", "!docs/templates/**/*.html", "!src/fava/**/*.html"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "formatter": {
    "includes": ["**", "!**/frontend/src/**/*.svelte"],
    "useEditorconfig": true
  },
  "linter": {
    "domains": {
      "project": "recommended"
    },
    "rules": {
      "recommended": true,
      "correctness": {
        "useImportExtensions": "on"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useConsistentObjectDefinitions": "on"
      }
    }
  },
  "overrides": [
    {
      "includes": ["**/*.svelte"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedImports": "off",
            "noUnusedVariables": "off"
          },
          "style": {
            "useConst": "off"
          }
        }
      }
    }
  ]
}
