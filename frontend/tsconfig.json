{
    "compilerOptions": {
        "target": "es2017",
        "module": "es2020",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": ["*.ts", "src/**/*.ts", "src/**/*.svelte", "test/**/*.ts"]
}
