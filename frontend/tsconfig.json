{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["*.ts", "src/**/*.ts", "src/**/*.svelte", "test/**/*.ts"]
}
