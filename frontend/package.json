{
  "name": "fava",
  "private": true,
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -cw",
    "lint": "npm run format && npm run lint:js && npm run lint:css && npx tsc",
    "lint:css": "stylelint 'css/*.css' 'src/**/*.svelte' --fix",
    "check-lint": "npm run check-format && eslint src --ext .js,.svelte,.ts && stylelint 'css/*.css' 'src/**/*.svelte'  && npx tsc",
    "lint:js": "eslint src test --fix --ext .js,.svelte,.ts",
    "check-format": "cd ../ && prettier '**/*.{css,md,js,json,svelte,ts}' --check --ignore-path .gitignore",
    "format": "cd ../ && prettier '**/*.{css,md,js,json,svelte,ts}' --check --write --ignore-path .gitignore",
    "test": "ava",
    "test:watch": "ava -w"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,svelte}": "stylelint --fix",
    "*.{css,md,js,json,svelte,ts}": "prettier --write",
    "*.{js,svelte,ts}": "eslint --fix"
  },
  "prettier": {
    "proseWrap": "always",
    "tabWidth": 2
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "sucrase/register"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "svelte3"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "camelcase": 0,
      "curly": [
        "error",
        "all"
      ],
      "max-classes-per-file": 0,
      "no-param-reassign": 0,
      "no-restricted-syntax": [
        "error",
        "ForInStatement",
        "LabelStatement",
        "WithStatement"
      ],
      "no-underscore-dangle": 0,
      "no-unused-expressions": 0,
      "import/extensions": 0,
      "import/no-unresolved": 0,
      "import/prefer-default-export": 0,
      "@typescript-eslint/camelcase": 0
    },
    "overrides": [
      {
        "files": "*.js",
        "rules": {
          "@typescript-eslint/explicit-function-return-type": 0
        }
      },
      {
        "files": "*.svelte",
        "processor": "svelte3/svelte3",
        "rules": {
          "no-undef-init": 0,
          "import/first": 0,
          "import/no-mutable-exports": 0,
          "@typescript-eslint/explicit-function-return-type": 0
        }
      },
      {
        "files": "*.ts",
        "parser": "@typescript-eslint/parser"
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recess-order",
      "stylelint-config-prettier"
    ],
    "rules": {
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-sucrase": "^3.1.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@types/codemirror": "0.0.98",
    "@types/d3-array": "^2.0.0",
    "@types/d3-axis": "^1.0.12",
    "@types/d3-color": "^1.2.2",
    "@types/d3-format": "^1.3.1",
    "@types/d3-hierarchy": "^1.1.6",
    "@types/d3-quadtree": "^1.0.7",
    "@types/d3-scale": "^2.2.0",
    "@types/d3-shape": "^1.3.2",
    "@types/d3-time-format": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "ava": "^3.12.1",
    "eslint": "^7.10.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "prettier-plugin-svelte": "^1.4.0",
    "rollup": "^2.28.2",
    "rollup-plugin-svelte": "^6.0.1",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.1.0",
    "stylelint-config-standard": "^20.0.0",
    "sucrase": "^3.15.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@openfonts/fira-mono_all": "^1.44.2",
    "@openfonts/fira-sans_all": "^1.44.1",
    "@openfonts/source-code-pro_all": "^1.44.2",
    "@openfonts/source-serif-pro_latin": "^1.44.1",
    "codemirror": "^5.58.1",
    "d3-array": "^2.7.1",
    "d3-axis": "^2.0.0",
    "d3-color": "^2.0.0",
    "d3-format": "^2.0.0",
    "d3-hierarchy": "^2.0.0",
    "d3-quadtree": "^2.0.0",
    "d3-scale": "^3.2.3",
    "d3-selection": "^2.0.0",
    "d3-shape": "^2.0.0",
    "d3-time-format": "^3.0.0",
    "svelte": "^3.28.0"
  }
}
